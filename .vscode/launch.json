{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Nodemon",
        "runtimeExecutable": "nodemon",
        "runtimeArgs": ["--inspect", "--watch", "src", "--exec", "npm", "run", "start:dev"],
        "restart": true,
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "sourceMaps": true,
        "cwd": "${workspaceFolder}"
      }
    ]
  }